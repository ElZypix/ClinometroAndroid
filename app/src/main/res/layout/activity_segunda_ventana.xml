<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp"
    tools:context=".SegundaVentana">

    <TextView
        android:id="@+id/tvTituloDistancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULAR DISTANCIA"
        android:textColor="#00BCD4"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAltura"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Altura del Objeto (Metros)"
        android:textColorHint="#B0B0B0"
        app:boxStrokeColor="#00BCD4"
        app:hintTextColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloDistancia"
        android:layout_marginTop="48dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etxAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textCursorDrawable="@drawable/cursor_cian" /> </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAngulo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ángulo de Elevación (Grados)"
        android:textColorHint="#B0B0B0"
        app:boxStrokeColor="#00BCD4"
        app:hintTextColor="#00BCD4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilAltura"
        android:layout_marginTop="24dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etxAngulo2" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="#FFFFFF"
            android:textCursorDrawable="@drawable/cursor_cian" /> </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/layoutBotonesCalculo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilAngulo"
        android:layout_marginTop="48dp">

        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:onClick="LimparCampos"
            android:text="Limpiar"
            android:textColor="#121212"
            android:textSize="16sp"
            app:icon="@drawable/ic_delate"
            app:iconTint="#121212" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00BCD4"
            android:onClick="CalcularDistancia"
            android:text="Calcular Distancia"
            android:textColor="#121212"
            android:textSize="16sp"
            app:icon="@drawable/ic_trending_up"
            app:iconTint="#121212" />

    </LinearLayout>

    <TextView
        android:id="@+id/txvResultado2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="La distancia es de _._ metros"
        android:textColor="#00BCD4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutBotonesCalculo"
        android:layout_marginTop="48dp"/>

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enviar Datos a Calculadora de Altura"
        android:textColor="#121212"
        android:textSize="16sp"
        android:backgroundTint="#00BCD4"
        app:icon="@drawable/ic_chack_circle"
        app:iconTint="#121212"
        android:onClick="EnviarDatos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>